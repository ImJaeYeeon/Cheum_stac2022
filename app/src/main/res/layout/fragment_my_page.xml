<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="28dp"
               android:fontFamily="@font/noto_sans_bold"
               android:textStyle="bold"
               android:id="@+id/userTv"
               android:text="로그인해주세요"
               android:layout_marginTop="58dp"
               android:layout_marginLeft="19dp"/>
           <Button
               android:layout_width="wrap_content"
               android:layout_height="38dp"
               android:layout_marginLeft="21dp"
               android:layout_marginTop="20dp"
               android:backgroundTint="#ffffff"
               android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:textSize="10dp"
               android:textColor="#707070"
               android:id="@+id/noticeBtn"
               android:layout_gravity="bottom"
               android:text="공지사항" />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="38dp"
               android:layout_marginLeft="21dp"
               android:layout_columnSpan="2"
               android:backgroundTint="#ffffff"
               android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
               style="@style/Widget.AppCompat.Button.Borderless"
               android:textSize="10dp"
               android:textColor="#707070"
               android:id="@+id/likeBtn"
               android:text="Like" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/userIv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_rowSpan="2"
                android:layout_gravity="right"
                android:layout_marginTop="58dp"
                android:layout_marginRight="21dp"
                android:src="@drawable/circle_background" />
            <Button
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:layout_marginTop="6dp"
                android:elevation="50dp"
                android:background="@drawable/round_backgroud"
                android:backgroundTint="#D3D3D3"
                android:id="@+id/loginBtn"
                android:text="로그인" />
        </LinearLayout>
    </LinearLayout>
        <Button
            android:layout_width="350dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/round_backgroud"
            android:backgroundTint="#E4E4E4"
            android:paddingLeft="33dp"
            android:paddingRight="15dp"
            android:elevation="20dp"
            android:drawableLeft="@drawable/ic_baseline_favorite_border_24"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24_black"
            android:text="좋아요 상품"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="58dp"
                    android:text="알람설정"/>
                <Switch
                    android:layout_width="55dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="58dp"
                    android:layout_marginLeft="270dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:text="이용안내"/>
                <Button
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:backgroundTint="#ffffff"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:text="버전 정보"/>
                <Button
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:backgroundTint="#ffffff"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:text="약관 확인"/>
                <Button
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:backgroundTint="#ffffff"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:text="고객센터"/>
                <Button
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:backgroundTint="#ffffff"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>








</FrameLayout>